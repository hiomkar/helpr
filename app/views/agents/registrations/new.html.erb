<div class="container-fluid">
	<div class="row-fluid">
		<div class="span4">
			&nbsp;
		</div>
		<div class="span4">
			<h2>Add agents for <%= @business.biz_name %>.</h2>
			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>

			<%= f.input :first_name, :required => true %>
			<%= f.input :last_name, :required => true %>
			<%= f.input :email, :required => true %>
			<%= f.input :password, :required => true %>
			<%= f.input :password_confirmation, :required => true %>
			<%= f.input :business_id, :as => :hidden, :input_html => { :value => @business.id } %>
			<br>
			<%= f.submit "Sign Up Agent", :class => "btn btn-success" %>
			<br>
			<br>
			<% end %>

			<%= link_to (admin_path(@cur_admin)) do %>
			<button class="btn btn-danger" >
				<span class="white-text">Cancel</span>
			</button>
			<% end %>
		</div>
		<div class="span4">
			&nbsp;
		</div>
	</div>
</div>