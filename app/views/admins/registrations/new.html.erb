<div class="container-fluid">
	<div class="row-fluid">
		<div class="span4">&nbsp;</div>
		<div class="span4">
			<h2>Sign up</h2>
			<h2> Admin Sign Up </h2>
			
			<% resource.build_business %>
			
			<%= simple_nested_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				
				
				<%= devise_error_messages! %>
				
				<%= f.input :first_name %>
			  	<%= f.input :last_name %>
			  	<%= f.input :phone %>
			 	<%= f.input :email %>
			  	<%= f.input :password %>
			  	<%= f.input :password_confirmation %>
				
				<br>
				
			  	<%= f.submit "Sign up" %>
			  	
			  	
			  	<%= f.simple_fields_for :business, resource.business do |business| %>
					<%= render "business_fields", :f => business %>
				<% end %>
			<% end %>
			
			<%= render "devise/shared/links" %>
		</div>
		<div class="span4">&nbsp;</div>
	</div>
</div>