<div class="container-fluid">
	<div class="row-fluid">
		<div class="span3">&nbsp;</div>
		<div class="span6">
			<h2>Sign up your business!</h2>
		</div>
		<div class="span3">&nbsp;</div>
	</div>
	<div class="row-fluid">
		<div class="span3">&nbsp;</div>
		<div class="span3">	
			<h3>Business Details</h3>
			<% resource.build_business %>
			
			
			<%= simple_nested_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			
				<%= f.simple_fields_for :business, resource.business do |business| %>
					<%= render "business_fields", :f => business %>
				<% end %>
				
		</div>
		<div class="span3">
				<h3>Administrator</h3>
				<%= devise_error_messages! %>
				
				<%= f.input :first_name %>
			  	<%= f.input :last_name %>
			  	<%= f.input :phone %>
			 	<%= f.input :email %>
			  	<%= f.input :password %>
			  	<%= f.input :password_confirmation %>
				
				<br>
				
			  	<%= f.submit "Sign up" %>
			  <br>
			<% end %>
			
			<%= render "devise/shared/links" %>
			</div>
		<div class="span3">&nbsp;</div>
	</div>
</div>