
<%- if Devise.mappings[:admin].registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(:admin) %><br />
<% end -%>

<%- if Devise.mappings[:admin].recoverable? && controller_name != 'passwords' %>
  <%= link_to "Forgot your password?", new_password_path(:admin) %><br />
<% end -%>

<%- if Devise.mappings[:admin].confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(:admin) %><br />
<% end -%>

<%- if Devise.mappings[:admin].lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(:admin) %><br />
<% end -%>

<%- if Devise.mappings[:admin].omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(:admin, provider) %><br />
  <% end -%>
<% end -%>