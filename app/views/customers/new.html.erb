
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">Helpr</a>
      <div class="navbar-content">
        <ul class="nav "></ul>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="span3">
    <div class="well">
      <h1>Welcome to <%= @business.biz_name %>!</h1>
    </div>
  </div>

  <a class="btn btn-large btn-primary btn-block visible-phone" href="#"><span class="btn-label">Sign Up Today!</span></a>
  <div class="row">
    <div class="span3"></div>
    <div class="span6">
      <div class="well">
        <div class="well">
          <h3>Hello!</h3>
          <p>We just need a few details about you and then we are ready to go!</p>
          <%= simple_nested_form_for @customer, :url => '/customers/index' do |f| %>
			
			<%= f.input :first_name, :required => true %>
			<%= f.input :last_name, :required => true %>
			<%= f.input :email, :required => true %>
			<%= f.input :phone, :required => true %>
					
			<%= f.simple_fields_for :chat, do |chat| %>
				<%= chat.input :business_id, :as => :hidden, :input_html => { :value => @business.id }%>
				<%= chat.input :keywords %>
			<% end %>
				
				<br>
				
			<%= f.submit "Chat!" %> <br><br>
			<% end %>
        </div>
      </div>
    </div>
    <div class="span3"></div>
  </div>
</div>
<script src="https://app.divshot.com/js/bootstrap.min.js"></script>
